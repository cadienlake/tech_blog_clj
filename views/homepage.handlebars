<div class="m-4 d-flex mx-auto w-75 flex-column align-center">
  {{#each posts as |post|}}
    <div class="flex-column align-center m-1 w-75">
      <a href="/post/{{post.id}}">
        <div class="btn btn-light">
          <h2>{{post.title}}</h2>
          <h5>{{post.body}}</h5>
          <p>Post created by: {{post.user.username}}</p>
          <p>{{formatDate post.createdAt}}</p>
        </div>
      </a>
    </div>
  {{/each}}
</div>